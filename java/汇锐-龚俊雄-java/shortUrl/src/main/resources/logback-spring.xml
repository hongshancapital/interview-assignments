<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">

    <Property name="log_home" value="logs"/>

    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%date{ISO8601} [%thread] - %-5level - %logger{50}.%method:%line - %msg %n</Pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
    </appender>

    <appender name="webAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${log_home}/shortUrl-web.log</File>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <FileNamePattern>${log_home}/shortUrl-web-%d{yyyy-MM-dd}.%i.log</FileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <Pattern>%date{ISO8601} [%thread] - %-5level - %logger{50}.%method:%line - %msg %n</Pattern>
        </encoder>
    </appender>
	
	<root>
       <level value="INFO" />
        <appender-ref ref="consoleAppender"/>
        <appender-ref ref="webAppender"/>
    </root>
</configuration>
