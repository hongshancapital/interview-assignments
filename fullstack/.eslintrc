{
  "env": {
    "es6": true,
    "node": true,
    "commonjs": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": [
      0,
      { "vars": "all", "args": "none", "ignoreRestSiblings": false }
    ],
    "no-console": 0,
    "no-undef": 0,
    "no-useless-escape": 0,
    "no-var": 2,
    "no-inner-declarations": 0
  }
}
