{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "jsx": "react",
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "lib": ["ES5","ES6","DOM"],
    "types": ["vite/client"],
    "outDir": "dist",
    "incremental": true
  },
  "include": [
    "src/server/**/*",
    "src/www.ts",
    "node_modules/vite/types/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "typeRoots": ["global.d.ts","node_modules/vite/types/*"]
}
