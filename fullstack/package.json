  "main": "index.js",
  "private": true,
  "scripts": {
    "build:server": "tsc --project ./src/server --outDir ./dist/server",
    "build:frontend:html": "mkdir -p ./dist/frontend/ && cp ./src/frontend/index.html ./dist/frontend",
    "build:frontend": "pnpm run build:frontend:html && webpack --config ./src/frontend/webpack.config.js",
    "e2e": "pnpm exec playwright test",
    "serve:dev": "pnpm run build:frontend && pnpm run build:server && env NODE_ENV=development node ./dist/server/index.js",
    "test": "pnpm run build:server && env NODE_ENV=test jest ./dist",
    "coverage": "pnpm run build:server && env NODE_ENV=test jest --collectCoverage ./dist"
  },
