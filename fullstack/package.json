{
  "name": "fullstack",
  "version": "1.0.0",
  "description": "撰写两个 API 接口",
  "main": "index.js",
  "scripts": {
    "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "tsc",
    "build": "npm run build-sass & npm run copy & npm run build-ts",
    "copy-sql": "shx cp -R src/db/sql/domains dist/db/sql",
    "copy-style": "shx cp -Rf src/public/fonts src/public/images dist/public & shx cp -R src/public/js/lib dist/public/js",
    "copy-template": "shx cp -R views dist",
    "copy": "npm run copy-sql & npm run copy-style & npm run copy-template",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/index.js",
    "serve": "node dist/server.js",
    "start": " npm run serve",
    "test": "jest --forceExit --coverage --verbose"
  },
  "author": "john",
  "license": "ISC",
  "devDependencies": {
    "@types/express-session": "^1.17.5",
    "@types/jquery": "^3.5.14",
    "@types/lusca": "^1.7.1",
    "@types/spark-md5": "^3.0.2",
    "@types/chai": "^4.3.4",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.14",
    "@types/express-flash": "^0.0.2",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/passport": "^1.0.11",
    "@types/passport-local": "^1.0.34",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "shx": "^0.3.4",
    "typescript": "^4.9.3",
    "sass": "^1.56.1",
    "supertest": "^6.3.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "dependencies": {
    "axios": "^1.2.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "jest": "^29.3.1",
    "lusca": "^1.7.0",
    "passport": "0.4.1",
    "passport-local": "1.0.0",
    "pg": "^8.8.0",
    "pg-monitor": "^1.5.0",
    "pg-promise": "^10.15.4",
    "pug": "^3.0.2",
    "redis": "^4.5.1",
    "redis-om": "^0.3.6",
    "siphash24": "^1.3.1",
    "winston": "^3.8.2"
  }
}
