{
  "name": "microservices",
  "version": "1.0.0",
  "description": "server and portal",
  "repository": "coding:fuyins.coding.net/p/microservices/d/microservices/git/commit/",
  "main": "index.js",
  "author": "Fu Yin",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "c": "git add . && git-cz",
    "i": "lerna bootstrap",
    "u": "lerna clean",
    "p": "npm run build && lerna publish",
    "dev": "lerna run lerna:dev",
    "build": "lerna run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@parcel/packager-ts": "^2.4.0",
    "@parcel/transformer-typescript-types": "^2.4.0",
    "commitizen": "^4.2.4",
    "crypto-browserify": "^3.12.0",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "stream-browserify": "^3.0.0",
    "typescript": "^4.6.3"
  }
}
