{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "exclude": [
    "src/server"
  ],
  "include": [
    "src/client/*",
    "src/client/types/*.d.ts"
  ]
}
