{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}