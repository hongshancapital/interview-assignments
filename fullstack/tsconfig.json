{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./",
        "watch": false,
        "resolveJsonModule": true,
        "esModuleInterop":true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "views",
        "public"
    ]
}