{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "typeRoots": [
          "node_modules/@types",
          "src/types"
      ],
      "types": [
          "express",
          "node",
          "jest"
      ]
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}