{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": false,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "lib": ["es5", "es6", "es2017"],
    "types": ["jest"]
  },
  "exclude": ["node_modules"]
}