{
  "name": "shorturl",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "author": "",
  "scripts": {
    "start:dev": "nodemon src/index.ts",
    "test": "nyc mocha **/*.spec.ts --reporter spec",
    "test:integration": "mocha \"integration/*/{,!(node_modules)/**/}/*.spec.ts\" --reporter spec",
    "prepare": "cd ../.. && husky install"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      ".env/*.*",
      "src/**/*"
    ],
    "ext": "ts,js,mjs,json,env,testing,development,production"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": "tsconfig.json",
          "sourceType": "module"
        },
        "rules": {
          "@typescript-eslint/interface-name-prefix": "off",
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/no-unused-vars": "off",
          "@typescript-eslint/ban-types": "off"
        }
      },
      {
        "files": [
          "**/*.spec.ts",
          "integration/**/*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": "tsconfig.spec.json",
          "sourceType": "module"
        },
        "rules": {
          "@typescript-eslint/interface-name-prefix": "off",
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/no-unused-vars": "off",
          "@typescript-eslint/ban-types": "off",
          "@typescript-eslint/no-empty-function": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --ignore-path ./.prettierignore --write"
    ],
    "packages/**/*.json": [
      "prettier --ignore-path ./.prettierignore --write"
    ]
  },
  "nyc": {
    "include": [
      "**/*.ts"
    ],
    "exclude": [],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "exit": true
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "dotenv-expand": "^8.0.3",
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "lodash": "^4.17.21",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "supertest": "^6.2.3",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "7.1.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.29",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "9.1.1",
    "@types/mysql": "^2.15.21",
    "@types/node": "^17.0.43",
    "@types/validator": "^13.7.3",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.1",
    "mocha": "9.2.2",
    "nodemon": "^2.0.16",
    "nyc": "15.1.0",
    "prettier": "2.7.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "license": "MIT"
}
