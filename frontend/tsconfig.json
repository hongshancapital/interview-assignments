{
  "exclude": ["**/__test__/*"],
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "module": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "paths": {
      "@lib/*": [
        "./lib/src/*"
      ],
    },
  }
}
