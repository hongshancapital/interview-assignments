{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:react-hooks/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": ["react", "@typescript-eslint", "prettier"],
    "rules": {
      "react/self-closing-comp": [
        "error",
        {
          "component": true,
          "html": true
        }
      ],
      "react/react-in-jsx-scope": 0,
      "react/prop-types": 0,
      "react/display-name": 0
    }
  }