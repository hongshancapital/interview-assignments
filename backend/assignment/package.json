{
  "name": "shorturlserver",
  "version": "1.0.0",
  "description": "convert long url into short url",
  "main": "./src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node --trace-deprecation ./dist/server.js",
    "start-dev": "ts-node-dev --respawn ./src/server.ts",
    "test": "mocha -r ts-node/register src/test/*.test.ts --exit",
    "test:coverage": "nyc npm run test"
  },
  "author": "chengle huang",
  "license": "ISC",
  "dependencies": {
    "@typegoose/typegoose": "^10.1.1",
    "express": "^4.18.2",
    "mongoose": "^6.9.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.13.0",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/test/*.test.ts"
    ],
    "exclude": [],
    "reporter": [
      "text",
      "html"
    ],
    "report-dir": "coverage"
  }
}
