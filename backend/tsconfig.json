  "compilerOptions": {
    "target": "ESNext",
    "module": "ES6",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}