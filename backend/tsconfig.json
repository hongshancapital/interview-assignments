{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "downlevelIteration": true,
    "importHelpers": true,
    "target": "es6",
    "module": "es2020",
    "outDir": "es6",
    "allowJs": true
  },
  "include": [
    "src"
  ]
}
