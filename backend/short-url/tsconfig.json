{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES6",
        "module": "CommonJS",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["ES6"],
        "baseUrl": "src",
        "paths": {
            "@config": ["config"],
            "@utils/*": ["utils/*"],
            "@routes/*": ["routes/*"],
            "@controllers/*": ["controllers/*"],
            "@middlewares/*": ["middlewares/*"],
            "@interfaces/*": ["interfaces/*"],
            "@dtos/*": ["dtos/*"],
            "@entities/*": ["entities/*"],
            "@services/*": ["services/*"],
            "@exceptions/*": ["exceptions/*"]
        }
    },
    "exclude": ["node_modules"]
}
