{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "dist",
        "target": "ES6",
        "module": "CommonJS",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["ES6"],
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"],
            "utils/*": ["src/utils/*"],
            "routes/*": ["src/routes/*"],
            "entities/*": ["./src/entity/*"],
            "services/*": ["src/services/*"],
            "controllers/*": ["src/controllers/*"]
        }
    }
}
