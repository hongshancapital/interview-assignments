{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../src",
  "testEnvironment": "node",
  "testRegex": [
    ".e2e-spec.ts$",
    ".spec.ts$"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "*.{js,ts}"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/src/main.ts"
  ]
}