{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "target": "ES5",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ]
}